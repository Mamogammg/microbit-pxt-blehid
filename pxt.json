{
    "name": "microbit-pxt-blehid",
    "version": "0.0.0",
    "description": "BLE HID Support",
    "license": "MIT",
    "dependencies": {
        "core": "*",
        "bluetooth": "*"
    },
    "files": [
        "README.md",
        "blehid.ts",
        "blehid.cpp",
        "BatteryService.cpp",
        "BatteryService.h",
        "HIDService.cpp",
        "HIDService.h",
        "debug.h",
        "shims.d.ts",
        "enums.d.ts"
    ],
    "testFiles": [
        "test.ts"
    ],
    "public": true,
    "supportedTargets": [
        "microbit"
    ],
    "preferredEditor": "tsprj",
    "authors": [
        "Bill Siever <bsiever@gmail.com>"
    ],
    "card": {
        "name": "BLE HID",
        "feedbackUrl": "http://siever.info"
    },
    "yotta": {
        "config": {
            "microbit-dal": {
                "bluetooth": {
                    "open": 0,
                    "whitelist": 1,
                    "security_level": "SECURITY_MODE_ENCRYPTION_NO_MITM",
                    "MICROBIT_BLE_DEVICE_INFORMATION_SERVICE": 0,
                    "MICROBIT_DAL_BLUETOOTH_DEVICE_INFO_SERVICE": 0,
                    "DEVICE_INFO_SERVICE": 0
                }
            }
        }
    }
}
